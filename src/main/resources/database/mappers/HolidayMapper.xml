<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coffice.app.events.holidays.HolidayDAO">

	<insert id="addHoliday" parameterType="java.util.List">
			insert into HOLIDAY (DATE_NAME, IS_HOLIDAY, LOCDATE)
			values
				<foreach collection="list" item="vo" open="" separator=", " close="">
					(#{vo.dateName}, #{vo.isHoliday}, #{vo.locdate})
				</foreach>
	</insert>
	
	<select id="getHolidays" resultType="HolidayVO">
			select DATE_NAME, LOCDATE
			from HOLIDAY
	</select>
	
</mapper>